@model List<Contract_Claim_System.Models.User>

<h2>Users List</h2>

@if (Model == null || !Model.Any())
{
    <p>No users found.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Username</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.Role</td>
                    <td>
                        <!-- You can add action buttons like Edit, Delete, etc. -->
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a href="@Url.Action("AddUser")">Add New User</a>
